pipeline {
    agent any

    stages {
        stage('Get the Code !') {
            steps {
                git branch: 'main', url: 'https://github.com/RaianBen/Junkis.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    if (isUnix()) {
                        sh 'make'
                    } else {
                        bat 'make'
                    }
                }
            }
        }

        stage('Permissions') {
            steps {
                script {
                    if (isUnix()) {
                        sh 'chmod +x StringInverser' // Assure-toi que le nom est correct
                    }
                }
            }
        }

        stage('Setting permissions and running the script') {
            steps {
                script {
                    if (isUnix()) {
                        sh './StringInverser' // Exécute le binaire
                    } else {
                        bat 'StringInverser.exe' // Remplace par le nom correct si besoin
                    }
                }
            }
        }

        stage('Nettoyage') {
            steps {
                script {
                    if (isUnix()) {
                        sh 'make clean'
                    } else {
                        bat 'make clean'
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'ça marche'
        }
        failure {
            echo 'Oh ça ne fonctionne pas'
        }
    }
}
