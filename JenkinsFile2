pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Récupérer le code du dépôt
                git branch: 'main', url: 'https://github.com/RaianBen/Junkis.git'
            }
        }
        stage('Build') {
            steps {
                script {
                    if (isUnix()) {
                        sh 'make' // Compiler le projet
                    } else {
                        bat 'make' // Pour les systèmes Windows
                    }
                }
            }
        }
        stage('Run') {
            steps {
                script {
                    // Remplace "Hello World" par ce que tu veux tester
                    if (isUnix()) {
                        sh './StringInverser "Hello World"'
                    } else {
                        bat 'StringInverser "Hello World"'
                    }
                }
            }
        }
        stage('Clean') {
            steps {
                script {
                    if (isUnix()) {
                        sh 'make clean' // Nettoyer les fichiers
                    } else {
                        bat 'make clean'
                    }
                }
            }
        }
    }
}
